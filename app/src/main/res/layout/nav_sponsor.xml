<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#FF3B3737"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="12dp"
        android:layout_marginTop="30dp"
        card_view:cardUseCompatPadding="true">



       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center">

           <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imageView1"
            android:layout_marginTop="30dp"
            android:background="@mipmap/sp1" />
         <ImageView
            android:layout_below="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:background="@mipmap/sp2" />

           <ImageView
               android:layout_below="@+id/imageView2"
               android:layout_width="200dp"
               android:layout_height="100dp"
               android:id="@+id/imageView3"
               android:background="@mipmap/sp3" />
           <ImageView
               android:layout_below="@+id/imageView3"
               android:layout_width="200dp"
               android:layout_height="100dp"
               android:id="@+id/imageView4"
               android:background="@mipmap/sp4" />
           <ImageView
               android:layout_below="@+id/imageView4"
               android:layout_width="200dp"
               android:layout_height="100dp"
               android:id="@+id/imageView5"
               android:background="@mipmap/sp5" />
           <ImageView
               android:layout_below="@+id/imageView5"
               android:layout_width="200dp"
               android:layout_height="100dp"
               android:id="@+id/imageView6"
               android:background="@mipmap/sp6" />
           <ImageView
               android:layout_below="@+id/imageView6"
               android:layout_width="200dp"
               android:layout_height="100dp"
               android:id="@+id/imageView7"
               android:background="@mipmap/sp7" />
       </RelativeLayout>





    </android.support.v7.widget.CardView>
    </ScrollView>



</RelativeLayout>
