<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#FF3B3737"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="12dp"
        android:layout_marginTop="30dp"
        card_view:cardUseCompatPadding="true">



       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           >

           <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageView1"
            android:layout_marginTop="30dp"
            android:background="@mipmap/smart"
               />
         <ImageView
            android:layout_below="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:background="@mipmap/gate" />

           <ImageView
               android:layout_below="@+id/imageView2"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/imageView3"
               android:background="@mipmap/kakatiya" />
           <ImageView
               android:layout_below="@+id/imageView3"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/imageView4"
               android:background="@mipmap/vanguard" />
           <ImageView
               android:layout_below="@+id/imageView4"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/imageView5"
               android:background="@mipmap/touch" />
           <ImageView
               android:layout_below="@+id/imageView5"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/imageView6"
               android:background="@mipmap/canter" />
           <ImageView
               android:layout_below="@+id/imageView6"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/imageView7"
               android:background="@mipmap/omega" />
           <ImageView
               android:layout_below="@+id/imageView7"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/imageView8"
               android:background="@mipmap/ss" />
           <ImageView
               android:layout_below="@+id/imageView8"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/imageView9"
               android:background="@mipmap/wintonson" />





       </RelativeLayout>





    </android.support.v7.widget.CardView>
    </ScrollView>



</RelativeLayout>
