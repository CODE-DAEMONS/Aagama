<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:padding="3dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#8C1717"
                    android:text="Make In India"
                    android:textColor="#ffffff"
                    android:id="@+id/title1" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/poster1"
                    android:src="@drawable/india"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/about1"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#CD3333"
                    android:id="@+id/content1"
                    android:padding="5dp"
                    android:layout_alignLeft="@+id/title1"
                    android:layout_alignStart="@+id/title1"
                    android:layout_below="@+id/title1"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card2"
            android:layout_below="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:padding="3dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#8C1717"
                    android:text="RC CAR RACING "
                    android:textColor="#ffffff"
                    android:id="@+id/title2" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/poster2"
                    android:src="@drawable/tire"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Create your remote vehicles, customize them and race your remote vehicles to the finish line.Get ready for the action to beat your opponents and set track records.Speed, throttle, smash, dash, crash and still make it to the finish line ahead of everyone."
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#CD3333"
                    android:id="@+id/content2"
                    android:padding="5dp"
                    android:layout_alignLeft="@+id/title2"
                    android:layout_alignStart="@+id/title2"
                    android:layout_below="@+id/title2"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card3"
           android:layout_below="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:padding="3dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#8C1717"
                    android:text="Filmy Quiz"
                    android:textColor="#ffffff"
                    android:id="@+id/title3" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/poster3"
                    android:src="@drawable/film"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/about3"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#CD3333"
                    android:id="@+id/content3"
                    android:padding="5dp"
                    android:layout_alignLeft="@+id/title3"
                    android:layout_alignStart="@+id/title3"
                    android:layout_below="@+id/title3"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card4"
       android:layout_below="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="225dp"
            android:padding="3dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#8C1717"
                android:text="Junk Yard"
                android:textColor="#ffffff"
                android:id="@+id/title4" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/poster4"
                android:src="@drawable/waste"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Do you believe that fun can be found from junk? Funk From Junk gives an opportunity to CRAZ'C student to showcase their technical wackiness combined with the old fashioned tricks to strengthen their understanding with their teammates..!!!"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:background="#CD3333"
                android:id="@+id/content4"
                android:padding="5dp"
                android:layout_alignLeft="@+id/title4"
                android:layout_alignStart="@+id/title4"
                android:layout_below="@+id/title4"
                android:layout_marginTop="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="5dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card5"
           android:layout_below="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:padding="3dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#8C1717"
                    android:text="Model Making"
                    android:textColor="#ffffff"
                    android:id="@+id/title5" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/poster5"
                    android:src="@drawable/mode"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/about5"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#CD3333"
                    android:id="@+id/content5"
                    android:padding="5dp"
                    android:layout_alignLeft="@+id/title5"
                    android:layout_alignStart="@+id/title5"
                    android:layout_below="@+id/title5"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card6"
           android:layout_below="@+id/card5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:padding="3dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#8C1717"
                    android:text="TechKnows"
                    android:textColor="#ffffff"
                    android:id="@+id/title6" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/poster6"
                    android:src="@drawable/technology"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/about6"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#CD3333"
                    android:id="@+id/conten6"
                    android:padding="5dp"
                    android:layout_alignLeft="@+id/title6"
                    android:layout_alignStart="@+id/title6"
                    android:layout_below="@+id/title6"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#59983b"
            card_view:cardCornerRadius="30dp"
            card_view:cardElevation="15dp"
            card_view:cardUseCompatPadding="true"
            android:layout_below="@+id/card6"
            android:onClick="register">
            <TextView
                android:id="@+id/cont"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:gravity="center|bottom"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_margin="10dp" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    </ScrollView>


</LinearLayout>