<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="20dp">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#3b5998"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:src="@mipmap/sai"
                app:border_color="#FF000000"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView1"
                android:layout_marginTop="10dp"

                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saiteja"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:id="@+id/name1"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_below="@id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile App Developer"
                    android:textSize="15sp"
                    android:id="@+id/desc1"
                    android:textColor="#ffffff"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="8dp" />

                <RelativeLayout
                    android:id="@+id/mailid1"
                    android:layout_below="@id/desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/msg1"
                        android:background="@drawable/msg"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="saiteja.rangi0615@mail.com"
                    android:textSize="12sp"
                    android:id="@+id/mail1"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/msg1"
                    android:layout_toEndOf="@+id/msg1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/mailid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/call1"
                        android:background="@drawable/call"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 7093142994"
                        android:textSize="12sp"
                        android:id="@+id/num1"
                        android:textColor="#ffffff"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/call1"
                        android:layout_toEndOf="@+id/call1" />

                </RelativeLayout>
            </RelativeLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
            </RelativeLayout>



















    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#3b5998"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/sneha1"
                    app:border_color="#FF000000"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_marginTop="10dp"

                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sneha"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:id="@+id/name2"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp" />

                    <TextView
                        android:layout_below="@id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile App Designer"
                        android:textSize="15sp"
                        android:id="@+id/desc2"
                        android:textColor="#ffffff"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="8dp" />

                    <RelativeLayout
                        android:id="@+id/mailid2"
                        android:layout_below="@id/desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/msg2"
                            android:background="@drawable/msg"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="snehamadhuri99@gmail.com"
                            android:textSize="12sp"
                            android:id="@+id/mail2"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/msg2"
                            android:layout_toEndOf="@+id/msg2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/mailid2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/call2"
                            android:background="@drawable/call"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 9849999948"
                            android:textSize="12sp"
                            android:id="@+id/num2"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/call2"
                            android:layout_toEndOf="@+id/call2" />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>




</RelativeLayout>
    </ScrollView>

</RelativeLayout>