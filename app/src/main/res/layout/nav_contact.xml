<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.compscitutorials.basigarcia.navigationdrawervideotutorial.GalleryFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#3b5998"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            android:layout_marginTop="50dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">



                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView1"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/tn_sam1"
                    app:border_color="#FF000000"
                    android:layout_marginLeft="70dp"/>


                <RelativeLayout
                    android:layout_below="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sameer"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:id="@+id/name1"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="50dp"/>

                    <TextView
                        android:layout_below="@id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Co-ordintor"
                        android:textSize="15sp"
                        android:id="@+id/desc1"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="8dp" />

                    <RelativeLayout
                        android:id="@+id/mailid1"
                        android:layout_below="@id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/msg1"
                            android:background="@drawable/msg" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sameerpvs@gmail.com"
                            android:textSize="12sp"
                            android:id="@+id/mail1"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/msg1"
                            android:layout_toEndOf="@+id/msg1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/mailid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:onClick="call1">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/call1"
                            android:background="@drawable/call"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 9000311170"
                            android:textSize="12sp"
                            android:id="@+id/num1"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/call1"
                            android:layout_toEndOf="@+id/call1" />

                    </RelativeLayout>
</RelativeLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>
        </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layout1"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#3b5998"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">



                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@drawable/tn_chandra"
                    app:border_color="#FF000000"
                    android:layout_marginLeft="70dp"/>


                <RelativeLayout
                    android:layout_below="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chandra Mouli"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:id="@+id/name2"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_below="@id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Co-ordintor"
                        android:textSize="15sp"
                        android:id="@+id/desc2"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="8dp" />

                    <RelativeLayout
                        android:id="@+id/mailid2"
                        android:layout_below="@id/desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/msg2"
                            android:background="@drawable/msg" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mouli.0307@gmail.com"
                            android:textSize="12sp"
                            android:id="@+id/mail2"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/msg2"
                            android:layout_toEndOf="@+id/msg2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/mailid2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:onClick="call1">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/call2"
                            android:background="@drawable/call"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 9032444496"
                            android:textSize="12sp"
                            android:id="@+id/num2"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/call2"
                            android:layout_toEndOf="@+id/call2" />

                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visit our page at"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textColor="#9c0e0e" />
    <TextView
        android:id="@+id/web1"
        android:layout_below="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="www.aagama2k16.in"
        android:textSize="18sp"
        android:textColor="#111d6c"
        android:onClick="call1"
        android:layout_marginBottom="20dp" />
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>

</RelativeLayout>