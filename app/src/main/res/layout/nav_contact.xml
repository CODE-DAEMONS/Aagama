<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/kulerwhite">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                card_view:cardBackgroundColor="#3b5998"
                card_view:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/rahula1"
                        app:border_color="#FF000000"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rahul Reddy"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:id="@+id/name1"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_below="@id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Co-ordintor"
                        android:textSize="15sp"
                        android:id="@+id/desc1"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"/>

                    <LinearLayout
                        android:id="@+id/mailid1"
                        android:layout_below="@id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/msg1"
                            android:background="@drawable/msg" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="challarahul55@gmail.com"
                            android:textSize="12sp"
                            android:id="@+id/mail1"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/msg1"
                            android:layout_toEndOf="@+id/msg1"
                           />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/mailid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="call1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/call1"
                            android:background="@drawable/call" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 8686482664"
                            android:textSize="12sp"
                            android:id="@+id/num1"
                            android:textColor="#ffffff" />

                    </LinearLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                card_view:cardBackgroundColor="#3b5998"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageView1"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/deepthi"
                        app:border_color="#FF000000"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deepthi"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:id="@+id/name2"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_below="@id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Co-ordintor"
                        android:textSize="15sp"
                        android:id="@+id/desc2"
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"/>

                    <LinearLayout
                        android:id="@+id/mailid2"
                        android:layout_below="@id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/msg2"
                            android:background="@drawable/msg" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="deepthi.akunapuram31@gmail.com"
                            android:textSize="12sp"
                            android:id="@+id/mail2"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/msg1"
                            android:layout_toEndOf="@+id/msg1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/mailid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="call1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/call2"
                            android:background="@drawable/call" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 9490129123"
                            android:textSize="12sp"
                            android:id="@+id/num2"
                            android:textColor="#ffffff" />

                    </LinearLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>